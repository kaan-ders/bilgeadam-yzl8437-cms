@{
}

@model List<Sayi>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Sayılar</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/Admin/Sayi/Add/@ViewBag.DergiId" class="btn btn-primary">Ekle</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col" style="width:20%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sayi in Model)
            {
                <tr>
                    <td>@sayi.No</td>
                    <td><a href="/Admin/Sayi/Add/@sayi.Id">düzenle</a> | <a href="/Admin/Sayi/Delete/@sayi.Id">sil</a> | <a href="#">makaleler</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>