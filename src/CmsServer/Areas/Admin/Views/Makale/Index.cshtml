@{
}

@model List<Makale>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Makaleler</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/Admin/Makale/Add" class="btn btn-primary">Ekle</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Başlık</th>
                <th scope="col" style="width:20%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var makale in Model)
            {
                <tr>
                    <td>@makale.Baslik</td>
                    <td><a href="/Admin/Makale/Add/@makale.Id">düzenle</a> | <a href="/Admin/Makale/Delete/@makale.Id">sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>