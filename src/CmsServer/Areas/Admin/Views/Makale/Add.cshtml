@{
}

@model Makale

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Makale Ekle/Düzenle</h1>
</div>

<form class="mt-3" asp-action="Add">
  <input type="hidden" class="form-control" asp-for="Id">
  <input type="hidden" class="form-control" asp-for="CreatedDate">
  <input type="hidden" class="form-control" asp-for="SayiId">
  <div class="mb-3">
    <label class="form-label">Başlık</label>
    <input type="text" class="form-control" asp-for="Baslik">
  </div>
  <div class="mb-3">
    <label class="form-label">İçerik</label>
    <textarea class="form-control" rows="5" asp-for="Ozet"></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">İçerik</label>
    <textarea class="form-control" rows="10" asp-for="Icerik" id="icerik"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
     <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

     <script>
      tinymce.init({
        selector: '#icerik'
      });
    </script>
}